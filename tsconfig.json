{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowJs": false,
    "noEmit": true,
    "strict": false,
    "isolatedModules": false,
    "esModuleInterop": false
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "test/**/*"
  ]
}
