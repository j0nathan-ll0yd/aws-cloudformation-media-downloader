{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "target": "ES2024",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "verbatimModuleSyntax": true,
    "types": ["node"],
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "#entities/*": ["src/entities/*"],
      "#lambdas/*": ["src/lambdas/*"],
      "#lib/*": ["src/lib/*"],
      "#util/*": ["src/util/*"],
      "#config/*": ["src/config/*"],
      "#types/*": ["src/types/*"],
      "#test/*": ["test/*"]
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.fixture.ts",
    "test/**/*",
    "./src/types/terraform.d.ts",
    "src/mcp/test/fixtures/**/*"
  ]
}
